<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Diana  Healthcare</title>
    <script>
      getLocation();
      function getLocation() {
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(showPosition);
        } else {
          alert("Geolocation is not supported by this browser.");
        }
      }

      function showPosition(position) {
        if (!position) {
          alert(
            "Diana  Healthcare needs your location to connecting you with a practitioner close to you!"
          );
        } else {
          document.getElementById("latitude").value = position.coords.latitude;
          document.getElementById("longitude").value =
            position.coords.longitude;
        }
      }
    </script>
  </head>
  <body>
    <div class="w-screen h-screen flex flex-col">
      <div
        class="justify-between items-center h-[60px] p-2 pt-10 w-full flex bg-white"
      >
        <p
          class="w-[150px] h-[28px] ml-[20px] lg:ml-[40px] text-[#3A3A3A] font-bold leading-7"
        >
          Welcome <%= patient.fullName %>
        </p>
        <span class="cursor-pointer mt-[10px] mr-0 lg:mr-[10px] h-[70px]">
          <p
            class="w-[150px] h-[28px] ml-[20px] lg:ml-[40px] text-[#FFC0CB] font-bold leading-7"
          >
            Diana  Healthcare
          </p>
        </span>
      </div>
      <div
        class="m-auto relative w-[330px] lg:w-[590px] flex h-[306px] bg-[#FFC0CB] rounded-3xl"
      >
        <div class="flex flex-col m-auto">
          <form action="/patient/find" method="post">
            <span
              class="w-[301px] lg:w-[559px] h-[58px] lg:h-[63px] flex rounded-[100px] bg-white/50 m-auto"
            >
              <p class="text-center text-[14px] text-[#3A3A3A] m-auto">
                Let's get you connected to a prime doctor quick ðŸ˜‰
              </p>
            </span>
            <span
              class="w-[301px] mt-4 lg:w-[559px] h-[58px] lg:h-[63px] flex rounded-[100px] bg-white/50 m-auto"
            >
              <p class="text-center text-[14px] text-[#3A3A3A] m-auto w-full">
                <input
                  type="text"
                  name="specialty"
                  id=""
                  placeholder="Please Enter the Meeting Link"
                  class="bg-transparent focus:outline-none w-full text-left m-auto ml-10"
                />
              </p>
            </span>
            <button type="submit">
              <span class="w-[300px] lg:w-[556px] h-[73px] flex pt-5 mx-auto">
                <span
                  class="cursor-pointer rounded-[100px] bg-white w-[141px] lg:w-[267px] h-[53px] mx-auto"
                >
                  <p class="text-center text-[15px] text-[#3A3A3A] m-auto p-4">
                    Connect to a Doctor
                  </p>
                </span>
              </span>
            </button>
            <input type="hidden" id="latitude" name="latitude" required />
            <input type="hidden" id="longitude" name="longitude" required />
            <input type="hidden" name="email" value="<%= patient.email %>" />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
